<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_header_height">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_gravity="center">
        <FrameLayout
            android:id="@+id/refresh_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <com.union.commonlib.ui.view.CircularProgress
                android:id="@+id/rl_loading"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                app:cp_borderWidth="4dp"
                android:visibility="gone"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/refresh_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_refresh_black_48dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/refresh_text"
            android:layout_toRightOf="@+id/refresh_image_layout"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="下拉刷新"/>
    </RelativeLayout>
</FrameLayout>