<com.union.commonlib.ui.view.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundedImage="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dip"
    android:layout_marginTop="4dip"
    android:background="@drawable/common_list_item_background"
    android:paddingBottom="4dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:paddingTop="4dip">


    <com.makeramen.RoundedImageView
        android:id="@+id/channel_cover"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/example"
        roundedImage:riv_border_color="@color/yellow"
        roundedImage:riv_border_width="0dip"
        roundedImage:riv_corner_radius="100dp"/>

    <TextView
        android:id="@+id/channel_name"
        style="@style/ListItemText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/channel_cover"
        android:text="Hello"/>

</com.union.commonlib.ui.view.RippleView>


